<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<TabPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="700" prefWidth="1400" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.Controller">
    <Tab closable="false" text="Добавление заявки">
        <GridPane hgap="50" vgap="10">
            <padding>
                <Insets bottom="10.0" left="400.0" right="10.0" top="100.0" />
            </padding>
            <Label text="Инициатор:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" /> <TextField fx:id="fieldInitiator" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Отделение:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" /> <TextField fx:id="fieldDepartment" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Адрес:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" /> <TextField fx:id="fieldAddress" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Влияние:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" /> <ComboBox fx:id="comboBoxInfluence" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.fillWidth="true" GridPane.rowIndex="3" />
            <Label text="Описание:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" /> <TextArea fx:id="areaDescription" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Button fx:id="buttonCleaner" onAction="#clean" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
            <graphic>
               <ImageView fitHeight="36.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@/icons/eraser.png" />
                  </image>
               </ImageView>
            </graphic></Button> <Button fx:id="buttonSave" maxWidth="Infinity" onAction="#insertData" text="Сохранить" GridPane.columnIndex="1" GridPane.fillWidth="true" GridPane.rowIndex="5" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </Tab>
    <Tab closable="false" text="Заявки">
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="columnInitiator" prefWidth="150.0" text="Инициатор" />
                <TableColumn fx:id="columnDepartment" prefWidth="200.0" text="Отделение" />
                <TableColumn fx:id="columnAddress" prefWidth="150.0" text="Адрес" />
                <TableColumn fx:id="columnInfluence" prefWidth="100.0" text="Влияние" />
                <TableColumn fx:id="columnDateBegin" minWidth="0.0" prefWidth="150.0" text="Дата начала" />
                <TableColumn fx:id="columnDateDeadLine" prefWidth="200.0" text="Дата необходимого окончания" />
                <TableColumn fx:id="columnDateEnd" prefWidth="150.0" text="Дата окончания" />
                <TableColumn fx:id="columnDescription" prefWidth="200.0" text="Описание" />
                <TableColumn fx:id="columnCondition" prefWidth="100.0" text="Состояние" />
            </columns>
        </TableView>
    </Tab>
    <Tab closable="false" text="Гистограмма">
        <AnchorPane maxHeight="Infinity" maxWidth="Infinity">
            <ComboBox fx:id="yearComboBox" prefWidth="100" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="10" />
            <ComboBox fx:id="monthComboBox" prefWidth="100" AnchorPane.leftAnchor="210" AnchorPane.topAnchor="10" />
              <Button fx:id="buttonBuildChart" onAction="#buildChart" prefWidth="150" text="Построить гистограмму" AnchorPane.leftAnchor="320" AnchorPane.topAnchor="10" />
             <BarChart fx:id="barChart" prefHeight="550.0" prefWidth="1350.0" AnchorPane.topAnchor="50">
               <xAxis>
                 <CategoryAxis side="BOTTOM" fx:id="xAxis" />
               </xAxis>
               <yAxis>
                 <NumberAxis fx:id="yAxis" side="LEFT" />
               </yAxis>
             </BarChart>
        </AnchorPane>
    </Tab>
    <Tab closable="false" text="Руководство">
        <TextArea text="Для добавления нового инцидента необходимо зайти во вкладку 'Добавление заявки'. Заполнить соотвествующие поля и нажать кнопку 'Сохранить'.
                        &#10;Все добавленые обращения будут отображены во вкладке 'Заявки'.
                        &#10;Для подверждения о выполнение обращения, необходимо поставить галачку в столбце 'Состояние' у соотвествующего обращения.
                        &#10;Вкладка 'Гистраграмма' служит для просмотра стастиски поступивших/выполненых обращений.">

        </TextArea>
    </Tab>

</TabPane>
